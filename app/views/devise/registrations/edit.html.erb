<table width="100%">
<tr>
  <td valign=top>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= devise_error_messages! %>
    <fieldset>
      <legend>Edit User</legend>

      <%= f.label :username %>
      <%= f.text_field :username %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>
      
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :current_password %>
      <%= f.password_field :current_password %>

      <%= f.submit( :class => "button" ) %>
      <section class="bottom-margin"></section>
    </fieldset>
    <% end %>
    <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>
    <%= link_to "Back", :back %>
  </td>
  <td style="width: 10%;">
  </td>
  <td valign=top>
  <% if @extended_profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@extended_profile.errors.count, "error") %> prohibited this extended_profile from being saved:</h2>
      <ul>
      <% @extended_profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>  
  <fieldset>
    <legend>Edit Extended Profile</legend>
    <% if ExtendedProfile.find_by_user_id(current_user.id) %>
    <%= render "extended_profiles/user_photo", :user => @extended_profile %>
    <% end %>
    <%= form_for @extended_profile, :html => { :multipart => true } do |f| %>
      <%= f.hidden_field :user_id %>

      <%= f.file_field :avatar %><br />*For best display, crop images to: 300x325px

      <%= f.label :first_name %>
      <%= f.text_field :first_name %>

      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
      
      <%= f.label :phone_number %>
      <%= f.text_field :phone_number %>

      <%= f.label :date_of_birth %>
      <%= f.date_select :date_of_birth, :start_year => 1930, :end_year => 2012 %>

      <%= f.label :sex %>
      <%= f.select :sex, {"Male" => true, "Female" => false} %>


      <%= f.label :about %>
      <%= f.text_area :about %>

      <%= f.submit( :class => "button" ) %>
    <% end %>
    <section class="bottom-margin"></section>
  </fieldset>

  </td>
</tr>
</table>
