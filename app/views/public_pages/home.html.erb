<% if not user_signed_in? %>
	<article class="home-content">
		<section class="home-left">
			<div id="featured" style="width:100%;" align=center>
				<% @extended_profiles.each do |user| %>
					<%= image_tag user.avatar.url(), :style=>"width:100%;height:400px;" %>
				<% end %>
			</div>
		</section>
		<section class="home-right">
			<%= render "devise/registrations/new" %>
		</section>
	</article>

<% else %>

	<div class="row">
	    <div class="twelve columns">
	      <%= paginate @extended_profiles %>
	      <div class="row">
		  <!-- Thumbnails -->
	        <% @extended_profiles.each do |a| %>
				  <%= render "extended_profiles/user_photo", :user => a %>
			<% end %>
		  <!-- End Thumbnails -->
	      </div>
	      <%= paginate @extended_profiles %>
	    </div>
		<hr />
    </div>

<% end %>